<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/topScreen"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_margin="7dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/title_searching2x" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_find2x" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView3"
            android:src="@drawable/icon_processed2x" />
    </RelativeLayout>

   

        <RelativeLayout
            android:id="@+id/cameraPreview"
            android:layout_width="fill_parent"
            android:layout_height="500dp"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_below="@+id/topScreen" 
            android:background="@drawable/camera_border"
            >

        </RelativeLayout>
    

    <RelativeLayout
        android:id="@+id/bottomScreen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/cameraPreview"
        android:background="@drawable/massage2x"
        android:orientation="horizontal" >
    </RelativeLayout>

</RelativeLayout>